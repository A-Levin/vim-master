# VimMaster Environment Configuration

# ================================
# TELEGRAM BOT SETTINGS
# ================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=

# Webhook настройки (для production)
TELEGRAM_WEBHOOK_URL=
TELEGRAM_WEBHOOK_SECRET_TOKEN=

# Mini App настройки
MINI_APP_URL=
MINI_APP_SECRET=

# ================================
# DATABASE SETTINGS  
# ================================
# PostgreSQL (production)
DATABASE_URL=postgresql://vim_master:password@localhost:5432/vim_master_db

# SQLite (development)
# DATABASE_URL=sqlite:///./vim_master.db

# Database connection settings
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=vim_master_db
DATABASE_USER=vim_master
DATABASE_PASSWORD=password

# Test database
TEST_DATABASE_URL=sqlite:///./test_vim_master.db

# ================================
# REDIS SETTINGS
# ================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ================================
# APPLICATION SETTINGS
# ================================
# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Development settings
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# ================================
# GAME CONFIGURATION
# ================================
# Quest settings
MAX_HINTS_PER_QUEST=3
DEFAULT_QUEST_TIME_LIMIT=300
STREAK_RESET_HOURS=48
LEADERBOARD_SIZE=100

# ================================
# MONITORING & ANALYTICS
# ================================
# Sentry for error tracking
SENTRY_DSN=

# ================================
# DEVELOPMENT SETTINGS
# ================================
# Only for development - do not use in production
DEV_DATABASE_RECREATE=false
DEV_MOCK_TELEGRAM_AUTH=false
DEV_BYPASS_RATE_LIMITS=false